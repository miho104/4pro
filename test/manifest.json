{
    "manifest_version": 3,
    "name": "Peripheral Vision Trainer",
    "version": "1.0",
    "description": "動画視聴中に周辺視野を鍛える拡張機能",
    "permissions": ["scripting", "activeTab","https://www.youtube.com/*"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_idle"
    }
    ]
}
